<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@drawable/background"
    android:paddingTop="20dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="280dp"
            android:layout_height="260dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAlt"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/ivAudio2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/sound" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/id_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp">

                <RadioButton
                    android:id="@+id/rbVariant_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ответ 1">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbVariant_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ответ 2">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbVariant_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ответ 3">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbVariant_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ответ 4">

                </RadioButton>

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/bWordNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Дальше"
            android:textSize="16dp"/>

